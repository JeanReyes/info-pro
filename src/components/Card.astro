---
interface Props {
	title: string;
	body?: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="custom-card">
  <li class="link-card">
    <a href={href}>
      <h2>
        {title}
        <span>&rarr;</span>
      </h2>
      <p>
        {body}
        <!-- <Nginx /> -->
      </p>
    </a>
  </li>
</div>

<style>
  :root {
    --accent-gradient: linear-gradient(45deg, #ff6ec4, #7873f5);
    --accent-light: 255, 255, 255; /* Ejemplo, ajústalo según tu necesidad */
  }

  .custom-card {
    width: 200px; /* Ajusta el tamaño según sea necesario */
    height: 300px; /* Ajusta el tamaño según sea necesario */
    padding: 1rem;
  }
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    overflow: hidden; /* Asegúrate de que el contenido no se desborde */
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Añadir espacio entre h2 y p */
    height: 100%; /* Asegúrate de que el enlace ocupa toda la tarjeta */
    transition: transform 0.3s ease; /* Animación para el efecto de hover */
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    flex-grow: 1; 
    display: flex;
    align-items: flex-end; /* Alinear el texto del párrafo en la parte inferior */
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
  .link-card:is(:hover, :focus-within) a {
    transform: scale(1.05); 
  }
</style>
